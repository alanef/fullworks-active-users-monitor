{
    "name": "fullworks/active-users-monitor",
    "description": "Real-time monitoring of logged-in WordPress users with visual indicators and admin tools",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Fullworks",
            "email": "support@fullworks.net",
            "homepage": "https://fullworks.net"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "alanef/free_plugin_lib": "^v1.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "config": {
        "vendor-dir": "fullworks-active-users-monitor/includes/vendor",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs",
        "lint:fix": "./vendor/bin/phpcbf",
        "phpcs-security": "./vendor/bin/phpcs -p --standard=phpcs_sec.xml",
        "phpcompat": "./vendor/bin/phpcs -p --standard=PHPCompatibilityWP --ignore=*/vendor/* --extensions=php --runtime-set testVersion 7.4- fullworks-active-users-monitor",
        "test": "./vendor/bin/phpunit",
        "test:unit": "./vendor/bin/phpunit --testsuite unit",
        "test:integration": "./vendor/bin/phpunit --testsuite integration",
        "make-pot": "mkdir -p fullworks-active-users-monitor/languages && wp i18n make-pot ./fullworks-active-users-monitor ./fullworks-active-users-monitor/languages/fullworks-active-users-monitor.pot --skip-audit --exclude='vendor,node_modules,tests,bin'",
        "build": "composer run-script make-pot && rm -rf dist && mkdir -p dist && wp dist-archive ./fullworks-active-users-monitor ./dist/fullworks-active-users-monitor.zip --plugin-dirname=fullworks-active-users-monitor"
    },
    "scripts-descriptions": {
        "lint": "Run PHP_CodeSniffer to detect coding standard violations",
        "lint:fix": "Run PHP Code Beautifier to fix coding standard violations",
        "test": "Run all PHPUnit tests",
        "test:unit": "Run PHPUnit unit tests only",
        "test:integration": "Run PHPUnit integration tests only",
        "make-pot": "Generate POT file for translations",
        "build": "Build the plugin with language files and create distribution archive"
    }
}
